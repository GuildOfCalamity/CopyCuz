                        <TextBlock
                            Margin="0,2,10,0"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            Foreground="{Binding VersionBrush, Converter={StaticResource stringToBrush}}"
                            Text="From">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="1"
                                    Opacity="1"
                                    ShadowDepth="2"
                                    Color="#FFFFFF" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox
                            x:Name="tbFrom4"
                            Width="{Binding TextWidth, Mode=OneWay, FallbackValue=399}"
                            MinHeight="23"
                            Margin="1,4,1,10"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#202020"
                            FontFamily="Aptos"
                            FontSize="14"
                            Foreground="{StaticResource NormalBrush}">
                            <TextBox.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Opacity="0.8"
                                    ShadowDepth="1"
                                    Color="#E0E0E0" />
                            </TextBox.Effect>
