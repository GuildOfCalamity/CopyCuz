                                FontFamily="Aptos"
                                FontSize="16"
                                Tag="{Binding RelativeSource={RelativeSource Self}}"
                                Template="{StaticResource ReformedButton}" />
                            <ctrl:Spinner
                                x:Name="spinner3"
                                Width="200"
                                Height="28"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                ChaseClockwise="True"
                                ChaseMode="4"
                                ChasePulseSize="6"
                                ChasePulseSpeed="2"
                                ChaseRingRadius="0"
                                ChaseTailLength="4"
                                DotBrush="{StaticResource ProgressBrushLinear}"
                                DotCount="12"
                                DotSize="14"
                                ProgressHighlightWidth="2"
                                ProgressIndeterminate="True"
                                ProgressSpacing="11"
                                ProgressSweepSpeed="17"
                                RenderMode="AnimatePositions"
                                RenderShape="Progress"
                                WaveAmplitude="16"
                                WaveDuration="1.1"
                                WindAmplitude="1"
                                WindFrequency="0.5" />
                        </Grid>
                        <TextBlock
                            Margin="0,2,10,0"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            Foreground="{Binding VersionBrush, Converter={StaticResource stringToBrush}}"
                            Text="From">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="1"
                                    Opacity="1"
                                    ShadowDepth="2"
                                    Color="#FFFFFF" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox
                            x:Name="tbFrom3"
                            Width="{Binding TextWidth, Mode=OneWay, FallbackValue=399}"
                            MinHeight="23"
                            Margin="1,4,1,10"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#202020"
                            FontFamily="Aptos"
                            FontSize="14"
                            Foreground="{StaticResource NormalBrush}">
                            <TextBox.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Opacity="0.8"
                                    ShadowDepth="1"
                                    Color="#E0E0E0" />
                            </TextBox.Effect>
                        </TextBox>
                        <TextBlock
                            Margin="0,1,10,0"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            Foreground="{Binding VersionBrush, Converter={StaticResource stringToBrush}}"
                            Text="To">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="1"
                                    Opacity="1"
                                    ShadowDepth="2"
                                    Color="#FFFFFF" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox
                            x:Name="tbTo3"
                            Width="{Binding TextWidth, Mode=OneWay, FallbackValue=399}"
                            MinHeight="23"
                            Margin="1,4,1,10"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#202020"
                            FontFamily="Aptos"
                            FontSize="14"
                            Foreground="{StaticResource NormalBrush}">
                            <TextBox.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Opacity="0.8"
                                    ShadowDepth="1"
                                    Color="#E0E0E0" />
                            </TextBox.Effect>
                        </TextBox>
                    </StackPanel>
                </Expander>
                <!--#endregion-->

                <!--#region [Copy Group 4]-->
                <Expander
                    Margin="2"
                    BorderThickness="0"
                    Collapsed="Expander_ExpandedOrCollapsed"
                    ExpandDirection="Down"
                    Expanded="Expander_ExpandedOrCollapsed"
                    FontSize="14"
                    IsExpanded="{Binding Is4Expanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource GroupBoxExpander}">
                    <Expander.Header>
                        <TextBox
                            Margin="2,0,0,0"
                            Background="#00111111"
                            BorderThickness="0"
                            Foreground="{StaticResource NormalBrush}"
                            Text="{Binding Header4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Expander.Header>
                    <StackPanel Margin="2" Orientation="Vertical">
                        <Grid Margin="3,8,3,3">
                            <Button
                                x:Name="btnCopy4"
                                Width="300"
                                Height="34"
                                Padding="0"
                                Click="Copy_Click"
                                Content="Copy Group 4"
                                FontFamily="Aptos"
                                FontSize="16"
                                Tag="{Binding RelativeSource={RelativeSource Self}}"
                                Template="{StaticResource ReformedButton}" />
                            <ctrl:Spinner
                                x:Name="spinner4"
                                Width="200"
                                Height="28"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                ChaseClockwise="True"
                                ChaseMode="4"
                                ChasePulseSize="6"
                                ChasePulseSpeed="2"
                                ChaseRingRadius="0"
                                ChaseTailLength="4"
                                DotBrush="{StaticResource ProgressBrushLinear}"
                                DotCount="12"
                                DotSize="14"
                                ProgressHighlightWidth="2"
                                ProgressIndeterminate="True"
                                ProgressSpacing="11"
                                ProgressSweepSpeed="17"
                                RenderMode="AnimatePositions"
                                RenderShape="Progress"
                                WaveAmplitude="16"
                                WaveDuration="1.1"
