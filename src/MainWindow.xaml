                            Text="To">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="1"
                                    Opacity="1"
                                    ShadowDepth="2"
                                    Color="#FFFFFF" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox
                            x:Name="tbTo4"
                            Width="{Binding TextWidth, Mode=OneWay, FallbackValue=399}"
                            MinHeight="23"
                            Margin="1,4,1,10"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#202020"
                            FontFamily="Aptos"
                            FontSize="14"
                            Foreground="{StaticResource NormalBrush}">
                            <TextBox.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Opacity="0.8"
                                    ShadowDepth="1"
                                    Color="#E0E0E0" />
                            </TextBox.Effect>
                        </TextBox>
                    </StackPanel>
                </Expander>
                <!--#endregion-->

                <!--#region [Status & Version]-->
                <TextBlock
                    x:Name="tbStatus"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    Foreground="{Binding VersionBrush, Converter={StaticResource stringToBrush}}"
                    Text="{Binding Status, Mode=OneWay, FallbackValue=v1.0.0.0}">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="1"
                            Opacity="1"
                            ShadowDepth="2"
                            Color="#FFFFFF" />
                    </TextBlock.Effect>
                </TextBlock>
                <!--#endregion-->

            </StackPanel>

        </Grid>

    </Border>

</Window>
