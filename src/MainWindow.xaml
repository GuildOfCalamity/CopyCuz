<Window
    x:Class="CopyCuz.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:CopyCuz.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CopyCuz"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ComboWindow"
    Title="CopyCuz"
    Width="440"
    Height="185"
    Activated="ComboWindow_Activated"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="ComboWindow_Closing"
    Deactivated="ComboWindow_Deactivated"
    FontFamily="Aptos"
    FontSize="20"
    KeyDown="ComboWindow_KeyDown"
    Loaded="ComboWindow_Loaded"
    MouseDown="ComboWindow_MouseDown"
    SizeChanged="ComboWindow_SizeChanged"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="{StaticResource updateViewBrush}"
        BorderBrush="#858585"
        BorderThickness="3"
        CornerRadius="10">

        <Grid Margin="0">

            <Image
                Width="160"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.07"
                Source="/logo.png"
                Stretch="Uniform" />

            <!--#region [Background Effect]-->
            <ctrl:Spinner
                x:Name="bkgnd"
                Width="420"
                Height="160"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DotBrush="{StaticResource WindBrushRadial}"
                DotCount="30"
                DotSize="8"
                RenderMode="AnimatePositions"
                RenderShape="Wind"
                Visibility="{Binding IsAnimated, Mode=OneWay, Converter={StaticResource boolToVisibility}}"
                WaveAmplitude="12"
                WaveDuration="1.1"
                WindAmplitude="32"
                WindBaseSpeed="30"
                WindFrequency="0.1" />
            <!--#endregion-->

            <StackPanel Margin="4" Orientation="Vertical">

                <!--#region [Copy Group 1]-->
                <Expander
                    Margin="2,10,2,2"
                    BorderThickness="0"
                    Collapsed="Expander_ExpandedOrCollapsed"
                    ExpandDirection="Down"
                    Expanded="Expander_ExpandedOrCollapsed"
                    FontSize="14"
                    IsExpanded="{Binding Is1Expanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource GroupBoxExpander}">
                    <Expander.Header>
                        <TextBox
                            Margin="2,0,0,0"
                            Background="#00111111"
                            BorderThickness="0"
                            Foreground="{StaticResource NormalBrush}"
                            Text="{Binding Header1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Expander.Header>
                    <StackPanel Margin="2" Orientation="Vertical">
                        <Grid Margin="3,8,3,3">
                            <Button
                                x:Name="btnCopy1"
                                Width="300"
                                Height="34"
                                Padding="0"
                                Click="Copy_Click"
                                Content="Copy Group 1"
                                FontFamily="Aptos"
                                FontSize="16"
                                Tag="{Binding RelativeSource={RelativeSource Self}}"
                                Template="{StaticResource ReformedButton}" />
                            <ctrl:Spinner
                                x:Name="spinner1"
                                Width="200"
                                Height="28"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                ChaseClockwise="True"
                                ChaseMode="4"
                                ChasePulseSize="6"
                                ChasePulseSpeed="2"
                                ChaseRingRadius="0"
                                ChaseTailLength="4"
                                DotBrush="{StaticResource ProgressBrushLinear}"
                                DotCount="14"
                                DotSize="14"
                                ProgressHighlightWidth="2"
                                ProgressIndeterminate="True"
                                ProgressSpacing="11"
                                ProgressSweepSpeed="17"
                                RenderMode="AnimatePositions"
                                RenderShape="Progress"
                                WaveAmplitude="16"
                                WaveDuration="1.1"
                                WindAmplitude="1"
                                WindFrequency="0.5" />
                        </Grid>
                        <TextBlock
                            Margin="0,2,10,0"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            Foreground="{Binding VersionBrush, Converter={StaticResource stringToBrush}}"
                            Text="From">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="1"
                                    Opacity="1"
                                    ShadowDepth="2"
                                    Color="#FFFFFF" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox
                            x:Name="tbFrom1"
                            Width="{Binding TextWidth, Mode=OneWay, FallbackValue=399}"
                            MinHeight="23"
                            Margin="1,4,1,10"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#202020"
                            FontFamily="Aptos"
                            FontSize="14"
                            Foreground="{StaticResource NormalBrush}">
                            <TextBox.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Opacity="0.8"
                                    ShadowDepth="1"
                                    Color="#E0E0E0" />
                            </TextBox.Effect>
                        </TextBox>
                        <TextBlock
                            Margin="0,1,10,0"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            Foreground="{Binding VersionBrush, Converter={StaticResource stringToBrush}}"
                            Text="To">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="1"
                                    Opacity="1"
                                    ShadowDepth="2"
                                    Color="#FFFFFF" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox
                            x:Name="tbTo1"
                            Width="{Binding TextWidth, Mode=OneWay, FallbackValue=399}"
                            MinHeight="23"
                            Margin="1,4,1,10"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#202020"
                            FontFamily="Aptos"
                            FontSize="14"
                            Foreground="{StaticResource NormalBrush}">
                            <TextBox.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Opacity="0.8"
                                    ShadowDepth="1"
                                    Color="#E0E0E0" />
                            </TextBox.Effect>
                        </TextBox>
                    </StackPanel>
                </Expander>
                <!--#endregion-->

                <!--#region [Copy Group 2]-->
                <Expander
                    Margin="2"
                    BorderThickness="0"
                    Collapsed="Expander_ExpandedOrCollapsed"
                    ExpandDirection="Down"
                    Expanded="Expander_ExpandedOrCollapsed"
                    FontSize="14"
